{
    "name": "kalcon_pdf-merger",
    "version": "1.0.0",
    "description": "Desktop tool for merging client invoices with expense backup PDFs",
    "main": ".vite/build/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
        "dev:next": "cross-env NEXT_ASSET_PREFIX=/ next dev",
        "dev:electron": "electron-forge start",
        "build": "npm run build:renderer && npm run package",
        "build:renderer": "npm run clean:next && cross-env NEXT_ASSET_PREFIX=app://-/ next build",
        "clean:next": "node -e \"try { require('fs').rmSync('.next', { recursive: true, force: true }); } catch(e) {}\"",
        "prebuild:electron": "npm run build:renderer",
        "build:electron": "electron-forge make",
        "prepackage": "npm run build:renderer",
        "package": "electron-forge package",
        "premake": "npm run build:renderer",
        "make": "electron-forge make",
        "publish": "npm run build:renderer && electron-forge publish",
        "create-icon": "echo Skipped",
        "cli": "node --loader tsx cli/index.ts",
        "test": "vitest",
        "lint": "eslint . --ext .ts,.tsx",
        "clean": "node -e \"['node_modules/.cache', '.next', 'out', '.vite'].forEach(d => { try { require('fs').rmSync(d, { recursive: true, force: true }); } catch(e) {} })\""
    },
    "keywords": [
        "invoice",
        "pdf",
        "merge",
        "electron",
        "desktop"
    ],
    "author": "XP3R Inc.",
    "license": "MIT",
    "dependencies": {
        "commander": "^12.0.0",
        "next": "^14.2.0",
        "pdf-lib": "^1.17.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "update-electron-app": "^3.1.1",
        "zod": "^3.22.4",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.4.0",
        "@electron-forge/maker-wix": "^7.10.2",
        "@electron-forge/plugin-vite": "^7.4.0",
        "@electron-forge/publisher-github": "^7.10.2",
        "@types/node": "^20.12.0",
        "@types/react": "^18.3.0",
        "@types/react-dom": "^18.3.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "autoprefixer": "^10.4.18",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron": "^31.0.0",
        "eslint": "^8.57.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "tsx": "^4.7.0",
        "typescript": "^5.4.0",
        "vite": "^5.2.0",
        "vitest": "^1.5.0"
    }
}
